{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "removeComments": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./.tmp/static/scripts",
    "inlineSourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "build",
    ".tmp",
    "**/*.spec.ts"
  ]
}
